@layer components {
    .paragraph {
        @apply text-base leading-6;

        &--lg {
            @apply text-lg leading-6;
        }

        &--sm {
            @apply text-sm leading-[1.375rem];
        }

        &--medium {
            @apply font-medium;
        }

        &--semibold {
            @apply font-semibold;
        }

        &--bold {
            @apply font-bold;
        }
    }
}